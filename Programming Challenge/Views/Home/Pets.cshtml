@model Programming_Challenge.Models.CatModel
<link rel="stylesheet" type="text/css" href="~/SharedStyle.css">

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h1>Cats</h1>
        <hr/>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="catList">
            <h3>Male</h3>
            @foreach (var item in Model.MaleCatList)
            {
                <ul>
                    <li>@item</li>
                </ul>
            }
            <h3>Female</h3>
            @foreach (var item in Model.FemaleCatList)
            {
                <ul>
                    <li>@item</li>
                </ul>
            }
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
